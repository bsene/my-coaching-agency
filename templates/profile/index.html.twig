{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="container" style="margin-top: 80px">
                <h2 class="px-3 py-3 mb-5 pt-md-5 pb-md-4 mx-auto text-center">Profil de {{app.user.fullname}}</h2>
                <div class="mb-5 row">
                    <div class="col">Nom</div>
                    <div class="col">{{app.user.lastName}}</div>
                    <div class="w-100"></div>
                    <div class="col">Pr√©nom</div>
                    <div class="col">{{app.user.firstName}}</div>
                    <div class="w-100"></div>
                    <div class="col">Email</div>
                    <div class="col">{{app.user.email}}</div>
                    <div class="w-100"></div>
                    <div class="mt-3 col"><a href="{{path('app_profile_edit')}}" class="btn btn-primary">Modifier mes informations personelles</a></div>
                </div>
                <div class="mt-5 row">
                    <div class="col">Mot de passe</div>
                    <div class="col">*******</div>
                    <div class="w-100"></div>
                    <div class="mt-3 col"><a href="{{path('app_profile_editpassword')}}" class="btn btn-primary">Modifier mon mot de passe</a></div>
                </div>
                <div class="mb-5 row">
                    <div class="mt-3 col"><a href="{{path('app_profile_command')}}" class="btn btn-primary">Mes commandes</a></div>
                </div>
                {% if is_granted('ROLE_EDITOR') %}
                    <div class="mb-5 row">
                        <div class="mt-3 col"><a href="{{path('app_profile_article')}}" class="btn btn-primary">Mes articles</a></div>
                    </div>
                {% endif %}
            </div>          
            {#{{include('layouts/partials/_sidenav.html.twig')}}#}
        </div>
    </div>   
{% endblock %}
