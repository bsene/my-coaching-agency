{% extends "base.html.twig" %}

{% block title %}Programmes vendus{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="container" style="margin-top: 80px">
                <div><h2>Liste des programmes achetés par {{app.user.fullname}}</h2></div>
                <div class="mb-5 row">
                    {% for product in products %}
                        <div class="col">Programmes</div>
                        <div class="col">{{product.title}}</div>
                        <div class="w-100"></div>
                        <div class="col">Quantité</div>
                        <div class="col">{{app.user.getProducts|length}}</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>   
{% endblock %}