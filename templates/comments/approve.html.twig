            <div class="col-md-6 mx-auto">
                <article class="article bg-white rounded shadow">
                    <div class="p-3">
                        <p><small><b>{{comment.author}} </b><time datetime="{{comment.createdAt|date('d-m-Y H:i:s')}}">{{comment.createdAt|ago}}</time></small></p>
                        <p>{{comment.comment}}</p>
