{% extends "base.html.twig" %}

{% block title %}Mon panier{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="mt-5">Mon panier</h1>
    {% if items | length > 0 %}
      <table class="table">
        <thead>
          <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for item in items %}
            <tr>
              <td>{{item.product.title}}</td>
              <td>{{item.product.price}}</td>
              <td>{{item.quantity}}</td>
              <td>{{item.product.price * item.quantity}}</td>
              <td>
                <a href="{{path('app_cart_remove', {id:item.product.id})}}" class="btn btn-danger btn-sm">Supprimer</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3" class="text-right">Total : </td>
            <td>{{total}}</td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    {% else %}
      <p>Il n'y a pas encore de produits, <span>pour commencer <a href="{{path('app_pricing')}}">cliquez ici</a></span></p>
    {% endif %}
  </div>
{% endblock %}