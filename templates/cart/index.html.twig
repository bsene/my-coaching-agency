{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
  <h1 class="mt-5 mb-5 text-center">Votre panier</h1>
  <div class="container">
    {% if items | length > 0 %}
      <table class="table">
        <thead>
          <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for item in items %}
            <tr>
              <td>{{item.product.title}}</td>
              <td>{{item.product.price}}</td>
              <td>{{item.quantity}}</td>
              <td>{{item.product.price * item.quantity}}</td>
              <td>
                <a href="#" class="btn btn-danger btn-small">Supprimer</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p>Il n'y a pas de produits dans le panier</p>
    {% endif %}
  </div>
{% endblock %}
