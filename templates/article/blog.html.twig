{% extends 'base.html.twig' %}

{% block title 'Mon blog' %}

{% block body %}
    <h1 class="pt-5 pb-5 text-center">La pratique d'un sport avec un coach sportif</h1>

    <div class="container">
        <div class="row">
            {#{% for article in articles %}#}
            <div class="col-6 col-md-4"></div>
                <div class="col-6 col-md-4">
                    <article class="mt-5 mb-5 bg-white rounded shadow">
                        <a href="{{path('app_blog_article_show', {id:article1.id})}}" class="btn btn-light"><h2>{{article1.title}}</h2></a>
                        <a href="{{path('app_blog_article_show', {id:article1.id})}}" class="btn btn-light">
                            <img src="{{ (article1.imageName ? vich_uploader_asset(article1) : asset('images/empty.jpg'))}}" alt="{{ article1.title }}" class="w-100" />                            
                        </a>
                        <p class="text-break">{{article1.description}}</p>
                        <a href="{{path('app_blog_like', {id:article1.id})}}" class="btn btn-link js-like-link">
                            {% if app.user and article1.isLikeByUser(app.user) %}
                                <i class="fas fa-thumbs-up"></i>
                            {% else %}
                                <i class="far fa-thumbs-up"></i>
                            {% endif %}
                            <span class="js-likes">{{article1.likes|length}}</span>
                            <span class="js-label">J'aime</span>
                        </a>
                    </article>
                </div>
        </div>
