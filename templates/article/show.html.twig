{% extends 'layouts/base.html.twig' %}

{% block title article.title %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <article class="article bg-white rounded shadow">
                <div class="mw-100 overflow-hidden">
                    <a href="{{path('app_article_show', {id:article.id})}}">
                        <img src="{{ (article.imageName ? vich_uploader_asset(article) : asset('build/images/empty.jpg')) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ article.title }}" class="w-100 rounded-top" />                            
                    </a>
                </div>
                <h2 class="h5 pl-3 pt-3"><a href="{{path('app_article_show', {id:article.id})}}" class="text-secondary text-decoration-none">{{article.title}}</a></h2>
                <p class="class-muted pl-3 pb-3">
                    <small>Publi√© <time datetime="{{article.createdAt|date('d-m-Y H:i:s')}}">{{article.createdAt|ago}}</time> par [OWNER FULL NAME]</small>
                </p>
                <p class="pl-3 pb-3">
                    {{article.description}}
                </p>
                <div class="pl-3 pb-3">
                    <a href="{{path('app_article_edit', {id:article.id})}}" class="btn btn-light">Modifier</a>
                    <a href="#" onclick="event.preventDefault(); confirm('Confirmer la suppression') && document.getElementById('js_article_delete').submit()" class="btn btn-light">Supprimer</a>
                    <form id="js_article_delete" action="{{path('app_article_delete', {id:article.id})}}" method="POST" style="display:none;">
                        <input type="hidden" name="csrf_token" value="{{csrf_token('article_deletion_' ~ article.id)}}">
                        <input type="hidden" name="_method" value="DELETE">
                    </form>
                </div>
            </article>
        </div>
    </div>
{% endblock %}
