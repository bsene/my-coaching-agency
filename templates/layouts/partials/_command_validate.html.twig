<body class="bg-light">
	<div class="container">
		<div class="py-5 text-center">
			<h2 class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">Formulaire de commande</h2>
		</div>

		<div class="row">
			<div class="col-md-4 order-md-2 mb-4">
				<h4 class="d-flex justify-content-between align-items-center mb-3">
					<span class="text-muted">Votre panier</span>
					<span class="badge badge-secondary badge-pill">{{quantityItems}}</span>
				</h4>
				<ul class="list-group mb-3">
					{% for item in items %}
						<li class="list-group-item d-flex justify-content-between lh-condensed">
							<div>
								<h6 class="my-0">{{item.product}}</h6>
								<small class="text-muted">Quantité
									<span>{{item.quantity}}</span>
								</small>
							</div>
							<span class="text-muted">{{item.price * item.quantity}}
								€</span>
						</li>
					{% endfor %}
					<li class="list-group-item d-flex justify-content-between">
						<span>Total HT</span>
						<strong>{{totalHT}}
							€</strong>
					</li>
					<li class="list-group-item d-flex justify-content-between">
						<span>Tva 20 %</span>
						<strong>{{tva|number_format(2)}}
							€</strong>
					</li>
					<li class="list-group-item d-flex justify-content-between">
						<span>Total TTC</span>
						<strong>{{totalTTC|number_format(2)}}
							€</strong>
					</li>
				</ul>
			</div>

			<div class="col-md-8 order-md-1">
				<h4 class="mb-3">Adresse de facturation</h4>
				{{ form_start(form) }}
				{{form_row(form.lastname)}}
				{{form_row(form.firstname)}}
				{{form_row(form.email)}}
				{{form_row(form.country)}}
				{{form_row(form.adress)}}
				{{form_row(form.adress2)}}
				{{form_row(form.town)}}
				{{form_row(form.postalCode)}}
				<button class="btn btn-primary btn-block" type="submit">Envoyer</button>
				{{form_end(form)}}
			</div>
		</div>
	</div>
</body>
