{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto" style="margin-top: 100px;">

                <h1 class="mt-5 px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">Réinitialisez votre mot de passe</h1>

                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}

                <p class="text-center text-muted">
                    Entrez votre adresse e-mail et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </p>

                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}

                    <button class="btn btn-primary btn-block">Envoyer un e-mail de réinitialisation du mot de passe</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}